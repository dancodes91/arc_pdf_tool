# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/arc_pdf_tool
# For development, you can use SQLite:
# DATABASE_URL=sqlite:///arc_pdf_tool.db

# Application Environment
ENV=development
DEBUG=true

# Security
SECRET_KEY=your-secret-key-here-change-in-production

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000
# For production, add your Vercel domain: https://your-app.vercel.app

# OCR Configuration
TESSERACT_CMD=tesseract
OCR_LANGUAGE=eng

# Redis (for background jobs)
REDIS_URL=redis://localhost:6379/0

# File Upload Limits
MAX_CONTENT_LENGTH=52428800  # 50MB

# Parsing Configuration
MIN_TABLE_CONFIDENCE=0.7
MAX_PAGES_TO_PROCESS=1000

# Accuracy Requirements
MIN_ROW_ACCURACY=0.98
MIN_NUMERIC_ACCURACY=0.99

# Optional: Baserow Integration (Phase 2)
# BASEROW_TOKEN=your_baserow_token_here
# BASEROW_DATABASE_ID=your_database_id