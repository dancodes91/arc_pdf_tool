{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SELECT Pricing Row Schema",
  "type": "object",
  "required": ["sku", "model", "base_model", "base_price", "page"],
  "properties": {
    "sku": {
      "type": "string",
      "pattern": "^SL\d{2,3}(_[A-Z]{2})?(_[A-Z]+\d*)?(_\d+)?$",
      "description": "Unique SKU: {BASE}_{FINISH}_{DUTY}_{LENGTH}"
    },
    "model": {
      "type": "string",
      "description": "Full model designation"
    },
    "base_model": {
      "type": "string",
      "pattern": "^SL\d{2,3}$",
      "description": "Base model code (SL11, SL300, etc.)"
    },
    "finish": {
      "type": ["string", "null"],
      "enum": ["CL", "BR", "BK", null],
      "description": "Finish code (geared hinges only)"
    },
    "duty": {
      "type": ["string", "null"],
      "pattern": "^(HD\d{3}|LL)?$",
      "description": "Duty/type code"
    },
    "length": {
      "type": ["string", "null"],
      "enum": ["57", "79", "83", "85", "95", "119", "120", null],
      "description": "Hinge length in inches"
    },
    "base_price": {
      "type": "number",
      "minimum": 0,
      "maximum": 10000,
      "description": "List price in USD"
    },
    "page": {
      "type": "integer",
      "minimum": 1,
      "maximum": 20,
      "description": "Source page number"
    },
    "table_index": {
      "type": "integer",
      "description": "Table index on page (optional)"
    },
    "row_index": {
      "type": "integer",
      "description": "Row index in table (optional)"
    }
  }
}
