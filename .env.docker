# Docker Environment Configuration for ARC PDF Tool
# This file contains default environment variables for Docker deployment

# Application Settings
ENVIRONMENT=docker
DEBUG=false
LOG_LEVEL=info
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration
DATABASE_URL=postgresql://arc_user:arc_password@db:5432/arc_pdf_tool
DB_HOST=db
DB_PORT=5432
DB_NAME=arc_pdf_tool
DB_USER=arc_user
DB_PASSWORD=arc_password

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json

# Flask Settings
FLASK_APP=app.py
FLASK_ENV=production
FLASK_DEBUG=false
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# File Storage
UPLOAD_PATH=/app/data/uploads
PROCESSED_PATH=/app/data/processed
EXPORT_PATH=/app/data/exports
MAX_FILE_SIZE=50MB

# Baserow Integration (Optional)
BASEROW_API_URL=https://api.baserow.io
BASEROW_API_TOKEN=
BASEROW_WORKSPACE_ID=
BASEROW_DATABASE_ID=
BASEROW_TIMEOUT=300
BASEROW_MAX_RETRIES=3
BASEROW_RATE_LIMIT=60

# MinIO Object Storage (Optional)
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=arc_minio
MINIO_SECRET_KEY=arc_minio_password
MINIO_BUCKET=arc-pdf-tool
MINIO_SECURE=false

# OCR Configuration
TESSERACT_CMD=/usr/bin/tesseract
TESSERACT_TIMEOUT=300
OCR_CONFIDENCE_THRESHOLD=0.6

# PDF Processing
PDF_PROCESSING_TIMEOUT=600
MAX_PAGES_PER_PDF=1000
ENABLE_PARALLEL_PROCESSING=true
WORKER_CONCURRENCY=4

# Monitoring
SENTRY_DSN=
PROMETHEUS_ENABLED=true
METRICS_PORT=9090

# Security
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
ALLOWED_HOSTS=["localhost", "127.0.0.1", "api"]

# Feature Flags
ENABLE_ASYNC_PROCESSING=true
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_METRICS=true